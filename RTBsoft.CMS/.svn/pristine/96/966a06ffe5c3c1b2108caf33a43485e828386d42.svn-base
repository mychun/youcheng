                        <li class="roll_l">
                            <a target="_blank" href="{dr1[site_url]}" title="{dr1[title]}">
                                <p class="f-img"><img src="{dr1[img_url]}" /></p>
                                <p class="f-txt">{dr1[title]}</p>
                            </a>
                        </li>
                        <%/foreach%>
                    </ul>
                </div>
            </div>
        </div>
    </div>

